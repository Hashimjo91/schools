<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.hashim.school.curentbus">

    <TextView android:text="موقع الباص" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textView"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              style="@android:style/TextAppearance.Large"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اتصال"
            android:id="@+id/StudyPlan"
            android:paddingTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/frameLayout"
            android:layout_alignEnd="@+id/frameLayout"
            style="android:style/TextAppearance.Large"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="500px"

            android:layout_above="@+id/StudyPlan"
            android:layout_below="@+id/textView"


            android:id="@+id/frameLayout">

        <ImageView
                android:paddingBottom="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/mappic"/>

    </LinearLayout>

</RelativeLayout>
